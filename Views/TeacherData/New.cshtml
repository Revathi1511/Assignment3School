
@{
    ViewBag.Title = "New";
}

<h2>New</h2>

<div id="containershow">
    <nav>
        <a class="navlink" href="/TeacherData/Index">Back To Teacher</a>
    </nav>
    <h2>New Author</h2>
    <form method="POST" action="/TeacherData/Create">
        <div class="inputrow">
            <label for="TeacherFName">First Name:</label>
            <input type="text" id="TeacherFName" name="TeacherFName" />

        </div>
        <div class="inputrow">
            <label for="TeacherLName">Last Name:</label>
            <input type="text" id="TeacherLName" name="TeacherLName" />

        </div>
        <div class="inputrow">
            <label for="Salary">Salary:</label>
            <input type="text" id="Salary" name="Salary" />
        </div>
        <div class="inputrow">
            <label for="EmployeeNumber">EmployeeNumber:</label>
            <div>
                <textarea id="EmployeeNumber" name="EmployeeNumber"></textarea>
            </div>
        </div>
        <div class="inputrow">
            <input type="submit" value="Update Teacher" />
        </div>
    </form>
</div>